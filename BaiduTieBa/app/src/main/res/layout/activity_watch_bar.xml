<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:gravity="center_vertical">
        <ImageView
            android:src="@drawable/left_arrow"
            android:id="@+id/w_bar_back"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="20sp"
            android:layout_marginStart="20sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/w_bar_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="吧名"
            android:textSize="20sp"/>
        <ImageView
            android:src="@drawable/search"
            android:id="@+id/w_bar_right_search"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_toLeftOf="@+id/w_bar_right_ring"
            android:layout_toStartOf="@+id/w_bar_right_ring"
            android:layout_marginRight="15sp"
            android:layout_marginEnd="15sp"/>
        <ImageView
            android:src="@drawable/message_uselect"
            android:id="@+id/w_bar_right_ring"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15sp"
            android:layout_marginEnd="15sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/w_bar_title"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:gravity="center_vertical"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/w_bar_icon"
            android:src="@drawable/my_select"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            android:id="@+id/w_bar_icon_1">
            <TextView
                android:id="@+id/w_bar_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/m_c_msg_right_arrow"
                android:textSize="15sp"
                android:textColor="@color/wordLightBlack"/>
            <TextView
                android:id="@+id/w_bar_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/m_c_msg_right_arrow"
                android:textSize="11sp"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cutLineGray"/>
    <RelativeLayout
        android:id="@+id/m_c_msg_like_frame"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:gravity="center_vertical"
        android:background="#FFFFFF">
        <!--点赞-->
        <ImageView
            android:id="@+id/m_c_msg_like"
            android:src="@drawable/like"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"  />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            android:layout_toRightOf="@id/m_c_msg_like"
            android:layout_toEndOf="@id/m_c_msg_like"
            android:text="@string/m_c_msg_like"
            android:textSize="16sp"
            android:textColor="@color/wordBlack"/>
        <ImageView
            android:src="@drawable/right_arrow"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginRight="10sp"
            android:layout_marginEnd="10sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/m_c_msg_right_arrow"/>
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/m_c_msg_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/m_c_msg_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>