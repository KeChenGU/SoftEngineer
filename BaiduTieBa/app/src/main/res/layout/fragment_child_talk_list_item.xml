<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/m_c_talk_show_list_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="55sp"
    android:gravity="center_vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/m_c_talk_show_list_icon"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:contentDescription="@string/talk_icon"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/m_c_talk_show_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/talk_icon"
                android:textColor="@color/wordBlack"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/m_c_talk_show_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10sp"
                android:layout_marginEnd="10sp"
                android:text="@string/talk"
                android:textColor="@color/wordLight"
                android:textSize="12sp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/m_c_talk_show_list_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/talk"
            android:textSize="13sp"
            android:textColor="@color/wordLight"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

</LinearLayout>